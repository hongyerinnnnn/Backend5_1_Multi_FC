<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.backend5_1_multi_fc.user.dao.UserDao">
    <resultMap id="UserResult" type="UserDto">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="profileImage" column="profile_image"/>
        <result property="lastCheckedCommentId" column="last_checked_comment_id"/>
        <result property="address" column="address"/>
        <result property="level" column="level"/>
        <result property="position" column="position"/>
        <result property="gender" column="gender"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="resetCode" column="reset_code"/>
        <result property="resetCodeExpires" column="reset_code_expires"/>
        <result property="loginFailCount" column="login_fail_count"/>
        <result property="lockedUntil" column="locked_until"/>
    </resultMap>

    <select id="findByUsername" parameterType="string" resultMap="UserResult">
        select *
        from User
        where username = #{username}
    </select>

    <select id="findByUserId" parameterType="long" resultMap="UserResult">
        select *
        from User
        where user_id = #{userId}
    </select>

    <select id="findByEmail" parameterType="string" resultMap="UserResult">
        select *
        from User
        where email = #{email}
    </select>

    <insert id="insert" parameterType="UserDto" useGeneratedKeys="true" keyProperty="userId">
        insert into  User (
                           username, email, password, nickname, profile_image, address, level, position, gender, created_at, updated_at
        ) values (
                             #{username}, #{email}, #{password}, #{nickname}, #{profileImage},
                             #{address}, #{level}, #{position}, #{gender}, NOW(), NOW()
         )
    </insert>

    <update id="update" parameterType="UserDto">
        update User
        set nickname = #{nickname},
            address = #{address},
            profile_image = #{profileImage},
            position = #{position},
            level = #{level},
            password = #{password},
            updated_at = NOW()
        where user_id = #{userId}
    </update>

    <update id="incrementLoginFailCount" parameterType="string">
        update User
        set login_fail_count = login_fail_count +1,
            locked_until = case
                when login_fail_count + 1 >= 5
                then date_add(now(), interval 30 minute)
                else locked_until
            end
        where username = #{username}
    </update>

    <update id="resetLoginFailCount" parameterType="string">
        update User
        set login_fail_count = 0,
            locked_until = null
        where username = #{username}
    </update>
</mapper>